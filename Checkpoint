pip install requests pandas
Step 1: Import libraries and store your API key
import requests
import pandas as pd
from IPython.display import Image, display

API_KEY = "YOUR_NASA_API_KEY"

Step 2: Get Astronomy Picture of the Day (APOD)
apod_url = f"https://api.nasa.gov/planetary/apod?api_key={API_KEY}"

response = requests.get(apod_url)
apod_data = response.json()

print("Title:", apod_data['title'])
print("Date:", apod_data['date'])
display(Image(url=apod_data['url']))

Step 3: Access Asteroids - NeoWs API
neo_url = f"https://api.nasa.gov/neo/rest/v1/feed?start_date=2025-10-01&end_date=2025-10-06&api_key={API_KEY}"

neo_response = requests.get(neo_url)
neo_data = neo_response.json()

Step 4: Process data into a pandas DataFrame
asteroids_list = []

for date in neo_data['near_earth_objects']:
    for asteroid in neo_data['near_earth_objects'][date]:
        asteroids_list.append({
            "Asteroid_ID": asteroid['id'],
            "Asteroid_Name": asteroid['name'],
            "Min_Diameter_km": asteroid['estimated_diameter']['kilometers']['estimated_diameter_min'],
            "Absolute_magnitude": asteroid['absolute_magnitude_h'],
            "Relative_velocity_km_s": float(asteroid['close_approach_data'][0]['relative_velocity']['kilometers_per_second'])
        })

asteroids_df = pd.DataFrame(asteroids_list)

Step 5: Preview DataFrame
asteroids_df.to_csv("asteroids_data.csv", index=False)
print("CSV file saved as 'asteroids_data.csv'")

